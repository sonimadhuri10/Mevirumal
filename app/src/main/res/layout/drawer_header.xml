<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/global__primary"
        android:gravity="top"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To MedVirumal"
            android:textColor="@color/text__white"
            android:textStyle="bold"
            android:visibility="gone"
            app:font='@{"normal"}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:textSize='@{"font_title_size"}' />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#fff"
                android:visibility="gone"
                android:weightSum="3"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:background="@drawable/note"
                        android:layout_height="20dp">
                    </ImageView>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:text="My Orders"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="@color/black"
                        android:textSize="7dp"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:background="@color/black"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:background="@drawable/flask"
                        android:layout_height="20dp">
                    </ImageView>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:text="My Test Labs"
                        android:textStyle="bold"
                        android:textSize="7dp"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:background="@color/black"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:padding="12dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:background="@drawable/operator"
                        android:layout_height="20dp">
                    </ImageView>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:text="My Consulatations"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="@color/black"
                        android:textSize="7dp"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>