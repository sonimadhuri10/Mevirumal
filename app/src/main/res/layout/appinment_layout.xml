<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llSignup"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvChoose"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="FOR CHHOSE YOUR DR. , CLICK HERE"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/etDrName"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:hint="Dr Name"
                android:editable="false"
                android:clickable="false"
                android:background="@null"
                android:textSize="12dp"
                android:layout_height="wrap_content">
            </EditText>
            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp">
            </View>

            <EditText
                android:id="@+id/etDrSpeciality"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:hint="Dr Speciality"
                android:editable="false"
                android:clickable="false"
                android:background="@null"
                android:textSize="12dp"
                android:layout_height="wrap_content">
            </EditText>
            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp">
            </View>






            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:text="Name of patient"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/etpatient"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:hint="xyz"
                android:textSize="12dp"
                android:background="@null"
                android:layout_height="wrap_content">
            </EditText>
            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp">
            </View>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:text="Email"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/etPatientEmail"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:hint="xyz@gmail.com"
                android:background="@null"
                android:textSize="12dp"
                android:layout_height="wrap_content">
            </EditText>
            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp">
            </View>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:text="Mobile No"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
                android:id="@+id/etPatientMobile"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:hint="xxxxxxxxxx"
                android:background="@null"
                android:inputType="number"
                android:textSize="12dp"
                android:layout_height="wrap_content">
            </EditText>
            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp">
            </View>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:text="Your Address"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/etPatientAddress"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:hint="Address"
                android:background="@null"
                android:textSize="12dp"
                android:layout_height="wrap_content">
            </EditText>
            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp">
            </View>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/etDate"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:hint="xx/xx/xxxx"
                        android:background="@null"
                        android:textSize="12dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <View
                        android:layout_marginTop="2dp"
                        android:layout_margin="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/black"
                        android:layout_height="1dp">
                    </View>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:text="Time"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/etTime"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:hint="xx:xx"
                        android:background="@null"
                        android:textSize="12dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <View
                        android:layout_marginTop="2dp"
                        android:layout_margin="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/black"
                        android:layout_height="1dp">
                    </View>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnSubmitAskDoc"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Submit"
                android:textColor="#fff"
                android:background="@drawable/button_background"
                android:layout_marginRight="30dp"
                android:layout_height="30dp">
            </Button>

        </LinearLayout>

    </ScrollView>



</LinearLayout>